  <% if @payment.errors.any? %>
      <div id="error_explanation" class="alert alert-error">
        <% @payment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </div>
    <% end %>
    
<div class="check">
  <%= simple_form_for @payment do |f| %>
    
    
    <%= f.hidden_field :id -%>
    <%= f.hidden_field :user_id, :value => current_user.id -%>
    <%= f.hidden_field :created_at -%>

    <div class="row-fluid">
      <div class="span6">
        <%= current_user.full_name-%>
      </div>
      <div class="span6 pull-right">
        <%= "1234"-%>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12 pull-right">
        <%= f.input :date_paid, :as => :date, :default => 1.day.ago, :input_html => { :class => 'input-small' }-%>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <%= f.input :receiver_id, :label => 'Who Was Paid', :collection => @users, :label_method => :drop_down_display, :value_method => :id-%>
      </div>
      <div class="span2">
        <%= f.input :total_amount, :label => '$'%>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <%= "$ Dollars" -%>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <%= f.input :memo-%>
      </div>
      <div class="span6">
        <div class="actions span6 pull-right">
          <%= f.button :submit -%>
        </div>
      </div>  
    </div>
  <% end %>
</div>
