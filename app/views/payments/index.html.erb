<h1>Listing payments</h1>

<table class="zebra-striped">
  <tr>
    <th>Id</th>
    <th>Owner</th>
    <th>Receiver</th>
    <th>Date paid</th>
    <th>Created at</th>
    <th>Total amount</th>
    <th>Memo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.id %></td>
    <td><%= payment.user_id %></td>
    <td><%= payment.receiver_id %></td>
    <td><%= payment.date_paid %></td>
    <td><%= payment.created_at %></td>
    <td><%= payment.total_amount %></td>
    <td><%= payment.memo %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= edit_decider(payment) %></td>
    <td><%= destroy_decider(payment) %></td>
  </tr>
<% end %>
</table>

