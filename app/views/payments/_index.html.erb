
<h1>Payments that You've Created</h1>

<table class="table table-bordered dotmatrix-striped">
  <thead>
      <tr>
        <th>Id</th>
        <th>Owner</th>
        <th>Receiver</th>
        <th>Date paid</th>
        <th>Created at</th>
        <th>Total amount</th>
        <th>Memo</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>
  <tbody>
    <% @previous_payments.each do |payment| %>
      <tr>
        <td><%= payment.id %></td>
        <td><%= payment.user_id %></td>
        <td><%= payment.receiver_id %></td>
        <td><%= payment.date_paid %></td>
        <td><%= payment.created_at %></td>
        <td><%= payment.total_amount %></td>
        <td><%= payment.memo %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

