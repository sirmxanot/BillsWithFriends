<div class="container">
  <h1>Expenses That You've Created</h1>

  <table class="table table-bordered dotmatrix-striped">
    <thead>
        <tr>
          <th>Id</th>
          <th>Expense name</th>
          <th>Owner</th>
          <th>Date incurred</th>
          <th>Created at</th>
          <th>Total amount</th>
          <th>Memo</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
    </thead>

    <tbody>
      <% @previous_expenses.each do |expense| %>
        <tr>
          <td><%= expense.id %></td>
          <td><%= expense.expense_name %></td>
          <td><%= User.find(expense.user_id).full_name %></td>
          <td><%= expense.date_incurred.to_formatted_s(:long)  %></td>
          <td><%= expense.created_at.to_date.to_formatted_s(:long)  %></td>
          <td><%= "$#{expense.total_amount}" %></td>
          <td><%= expense.memo %></td>
          <td><%= link_to tag("i", :class => 'icon-eye-open'), expense %></td>
          <td><%= edit_decider(expense) %></td>
          <td><%= destroy_decider(expense) %></td>
        </tr>
      <% end %>
      </tbody>
  </table>
</div>