<div class="fields">  
  <%= f.hidden_field :id -%>
  <%= f.hidden_field :expense_id, :value => @expense.id -%>
  <%= f.hidden_field :creditor_id, :value => current_user.id -%>
  <%= f.hidden_field :created_at -%>
  <%= f.input :debtor_id, :label => "Participant", :collection => @users, :label_method => :drop_down_display, :value_method => :id -%>
  <%= f.input :amount -%>
  <%= link_to_remove_fields "Remove", f -%>
</div>