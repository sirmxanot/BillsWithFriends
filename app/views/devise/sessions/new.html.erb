<%= devise_error_messages! %>
<h1>Sign in</h1>
<div class="container">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="row-fluid">
      <div class="span12">
    	  <%= f.input :email, :label => false, :placeholder => 'user@domain.com', :input_html => { :class => 'input-xlarge' }-%>
      </div>
    </div>
		<div class="row-fluid">
      <div class="password span6">
      	<%= f.input :password, :label => false, :placeholder => 'Password', :input_html => { :class => 'input-medium' }-%>
      </div>
    </div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'white' %></div>
	  <% end -%>

	  <div class="row-fluid pull-left">
	  	<%= f.submit "Sign In", :class => 'btn-primary' %>
	  </div>
	<% end %>
</div>

<%= render :partial => "devise/shared/links" %>